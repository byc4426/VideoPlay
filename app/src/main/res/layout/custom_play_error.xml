<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exo_error_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@id/exo_player_error_btn_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="false"
        android:drawablePadding="5dp"
        android:gravity="center"
        app:srcCompat="@drawable/ic_sentiment_very_dissatisfied_white_48px"

        />

    <TextView
        android:id="@+id/exo_player_error_text"
        android:shadowColor="@color/simple_exo_style_Accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="出错了"
        android:textColor="@android:color/white" />


</LinearLayout>